<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mzlalal.oauth2.dao.UserDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.mzlalal.base.entity.oauth2.dto.UserEntity" id="userMap">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="mobile" column="mobile"/>
        <result property="header" column="header"/>
        <result property="mail" column="mail"/>
        <result property="accessToken" column="access_token"/>
        <result property="refreshToken" column="refresh_token"/>
        <result property="expireAt" column="expire_at"/>
        <result property="isHide" column="is_hide"/>
        <result property="roleId" column="role_id"/>
        <result property="tenantId" column="tenant_id"/>

        <collection property="roleList" javaType="java.util.ArrayList"
                    ofType="com.mzlalal.base.entity.oauth2.vo.RoleVo"
                    column="role_id" select="com.mzlalal.oauth2.dao.RoleDao.queryRoleListById"/>
        <collection property="clientList" javaType="java.util.ArrayList"
                    ofType="com.mzlalal.base.entity.oauth2.vo.ClientVo"
                    column="role_id" select="com.mzlalal.oauth2.dao.RoleClientDao.queryClientListByRoleId"/>
    </resultMap>

    <select id="queryOneByMobile" resultMap="userMap">
        select * from t_user where mobile = #{mobile}
    </select>

    <select id="queryOneByMail" resultMap="userMap">
        select * from t_user where mail = #{mail}
    </select>

    <select id="queryExistByMail" resultType="java.lang.Boolean" parameterType="java.lang.String">
        select count(mail) from t_user where mail = #{mail}
    </select>
    <select id="queryVueSelectListByUsername" resultType="com.mzlalal.base.entity.global.component.VueSelect"
            parameterType="java.lang.String">
        SELECT id as code, username as label FROM t_user where username like concat('%', #{username}, '%')
    </select>
</mapper>