<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mzlalal.oss.dao.InvoiceDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.mzlalal.base.entity.oss.dto.InvoiceEntity" id="invoiceMap">
        <result property="id" column="id"/>
        <result property="invoiceName" column="invoice_name"/>
        <result property="invoiceUrl" column="invoice_url"/>
        <result property="invoiceSourceUrl" column="invoice_source_url"/>
        <result property="invoiceForwardStatus" column="invoice_forward_status"/>
        <result property="invoiceDate" column="invoice_date"/>
        <result property="isHide" column="is_hide"/>
        <result property="createBy" column="create_by"/>
        <result property="createName" column="create_name"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateName" column="update_name"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="queryInvoiceBySourceUrl" resultType="java.lang.String">
        select invoice_source_url from t_invoice
        <where>
            <foreach collection="sourceUrlSet" open="and invoice_source_url in (" item="item" close=")">
                #{item}
            </foreach>
            and is_hide = 0
        </where>
    </select>

</mapper>